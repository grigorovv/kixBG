@model SellerProfileModel

<body>
    <div class="container py-5">
        <h1 class="text-center">@Model.Seller.Name Listings</h1>
        <h3 class="text-center"> Phone number: <strong>@Model.Seller.PhoneNumber</strong></h3>
        <h3 class="text-center"> @Model.CityName, @Model.CountryName</h3>
        <div class="row">
            <div class="col-lg-12">
                <h3 class="h3"> Clothes:</h3>

                <div class="row">
                    @foreach (var c in Model.Clothes)
                    {
                        <div class="col-md-3">
                            <div class="card mb-4 product-wap rounded-0">
                                <div class="card rounded-0">
                                    <img class="card-img rounded-0 img-fluid" src="@c.ImageURL">
                                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                        <ul class="list-unstyled">
                                            <li><a asp-controller="Clothes" asp-action="Details" asp-route-id="@c.Id" class="btn btn-success text-white mt-2"><i class="far fa-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <a asp-controller="Clothes" asp-action="Details" asp-route-id="@c.Id" class="h3 text-decoration-none">@c.Model</a> @*title*@
                                    <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                        <li class="pt-2">
                                            <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                        </li>
                                    </ul>
                                    <p class="text-center mb-0">@c.Price BGN</p> @*price*@
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <h3 class="h3"> Shoes:</h3>
                <div class="row">
                    @foreach (var s in Model.Shoes)
                    {
                        <div class="col-md-3">
                            <div class="card mb-4 product-wap rounded-0">
                                <div class="card rounded-0">
                                    <img class="card-img rounded-0 img-fluid" src="@s.ImageURL">
                                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                        <ul class="list-unstyled">
                                            <li><a asp-controller="Shoes" asp-action="Details" asp-route-id="@s.Id" class="btn btn-success text-white mt-2"><i class="far fa-eye"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <a asp-controller="Shoes" asp-action="Details" asp-route-id="@s.Id" class="h3 text-decoration-none">@s.Model</a> @*title*@
                                    <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                        <li class="pt-2">
                                            <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                            <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                        </li>
                                    </ul>
                                    <p class="text-center mb-0">@s.Price BGN</p> @*price*@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->
</body>
